/* myRedPackage.wxss */
.container{
  padding-top: 20rpx;
  box-sizing: border-box;
}
.navbar{  
  width: 100%;
  display: flex;  
  justify-content: space-around;
  background: #3fa5ed;
  height: 80rpx;
  border-bottom: 1rpx solid #D9D9D9;
  position: fixed;
  z-index: 10000;
  top: 0;
  left: 0;
}  
 .list{
  margin-top: 80rpx;
} 
  .item{
  width: 25%;
  position: relative;  
  text-align: center;
  color: #a1d8ff;
  font-size: 0.9rem;
}  
 .item.active{  
  color: #ffffff;  
  font-size: 0.9rem;
  border-bottom: 1px white solid;
}  
 .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 2rpx;  
  background: #ffffff;  
}  
.nav_text{
  height: 80rpx;
  line-height: 80rpx;
}
.rePackage_wrap{
  width: 100%;
  height:170rpx;
  position: relative;
}
.red_pack_background_img{
  width: 100%;
  height:170rpx;
  position: absolute;
}
.redPackage{
  width:95%;
  margin-bottom: 30rpx;
}
.list{
  display: flex;
  flex-direction:column;
  align-items:center;
}
.red_package_content{
  font-size: 1.2rem;
  color: black;
}
.red_package_content_wrap{
  top: 30rpx;
  left: 50rpx;
  width: 90%;
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
}
.red_package_btn{
background-color:#ed533f;
color: white;
font-size:0.7rem;
margin-right: 20rpx;
border-radius:3px;
}
.red_text_wrap{
  top: 110rpx;
  left: 50rpx;
  position: absolute;
}
.red_package_discribe{
  font-size: 0.7rem;
  color: #999999;
  margin-right: 50rpx;
 
}