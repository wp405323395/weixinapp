<!--used.wxml-->

<import src="../../template/list_product.wxml" />
<view class="container">
  <view class="navbar">
    <text wx:for="{{navbar}}" data-idx="{{index}}" class="item {{currentTab==index ? 'active' : ''}}" wx:key="unique" bindtap="navbarTap">{{item}}</text>
  </view>

  <!--餐饮美食-->
  <view class="fragment" hidden="{{currentTab!==0}}">
    <!--<template is="used_list" data="{{...first_page}}"/>  -->
    <scroll-view data-id="{{0}}" scroll-y class="list" bindscrolltolower="bindDownLoad" style="height:100%;">
      <template is="list_product" data="{{...first_page,foot_loading,tickit_width,tickit_height}}" />
    </scroll-view>

  </view>

  <!--生鲜超市-->
  <view class="fragment" hidden="{{currentTab!==1}}">
    <scroll-view data-id="{{1}}" scroll-y class="list" bindscrolltolower="bindDownLoad" style="height:100%;">
      <template is="list_product" data="{{...second_page,foot_loading,tickit_width,tickit_height}}" />
    </scroll-view>

  </view>

  <!--休闲娱乐-->
  <view class="fragment" hidden="{{currentTab!==2}}">
    <scroll-view data-id="{{2}}" scroll-y class="list" bindscrolltolower="bindDownLoad" style="height:100%;">
      <template is="list_product" data="{{...third_page,foot_loading,tickit_width,tickit_height}}" />
    </scroll-view>

  </view>

</view>