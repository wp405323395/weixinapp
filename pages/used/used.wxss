/* used.wxss */
page{  
  display: flex;  
  flex-direction: column;  
  height: 100%;  
}  
.navbar{  
  width: 100%;
  flex: none;  
  display: flex;  
  background: #fff;  
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
}  
.navbar .item.active{  
  color: #FFCC00;  
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: #FFCC00;  
}  
.fragment {
  width: 100%;
  height: 100%;
}
.list{
  display: flex;
  flex-direction: column;
}  
.img{  
    height: 100rpx;  
    width: 100rpx;  
    border-radius: 50%;  
}
.text{  
    display: flex;  
    flex-shrink:1;  
    flex-grow:1;  
    padding: 10rpx;  
    flex-wrap: wrap;  
    font-size: 50rpx;  
}   
.title{  
    font-size: 50rpx;  
    margin:10rpx 100rpx 10rpx 100rpx;  
}  
.description{  
    font-size: 50rpx;  
    align-self:flex-end;  
}  
.foot_loading{
  width: 100%;
  display: flex;
  justify-content: center;
}