/* used.wxss */
@import "../index/index.wxss";
.head_menu{
  width: 100%;
  display: flex;
  flex-direction:row;
  justify-content: space-around;
  align-items: center;
}
.head_menu > view {
  color: black;
}
.menu_unfocus{
  color: black;
}
.menu_focus{
  border-bottom: 1rpx solid red;
  color: red;
}


  
.img{  
    height: 100rpx;  
    width: 100rpx;  
    border-radius: 50%;  
}  
  
.text{  
    display: flex;  
    flex-shrink:1;  
    flex-grow:1;  
    padding: 10rpx;  
    flex-wrap: wrap;  
    font-size: 50rpx;  
}  
  
.title{  
    font-size: 50rpx;  
    margin:10rpx 100rpx 10rpx 100rpx;  
}  
.description{  
    font-size: 50rpx;  
    align-self:flex-end;  
}  

.list{
  display: flex;
  flex-direction: column;
}

.product_item{
  padding-top: 15rpx;
  border-bottom: 1rpx solid #D8D8D8;

}