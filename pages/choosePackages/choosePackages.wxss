/* choosePackages.wxss */
.package_list{
  display: flex;
  flex-direction: column;
  align-items:center;
}
.package_item{
  width: 90%;
  height:150rpx;
  margin-top: 55rpx;

}
.image_container{
  width: 100%;
  height: 0;
  position: relative;
}
.image_style{
  position: relative;
  width: 100%;
  height: 150rpx;
}
.package_name{
  display: block;
  color: white;
  font-size: 1.2rem;

}
.discribe{
  display: block;
  color: white;
  font-size: 0.5rem;
}
.time_price{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: white;
  color: #602fc2;
  font-size: 1.1rem;
}
.item_content{
  z-index: 10000;
  position: relative;
  padding-left: 20rpx;
  padding-right: 20rpx;
}