/* pay.wxss */
.container{
  width: 100%;
  height: 100%;
}
.item{
  width: 100%;
  height: 100%;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content:space-between; 
  align-items: center;
}
.lable{
  font-size: 0.6rem;

}
text,.cell1{
  padding: 10px;
}
.hav{
  margin:10px 0;
}

/*主容器*/  
.stepper {  
    width:200rpx;
    display: flex;
    flex-direction:row ;
    height: 50rpx;  
    align-items:center;
    /*给主容器设一个边框*/  
    border: 1px solid #ccc;  
    border-radius: 3px;  
    margin-right: 16rpx;
}  
  
/*加号和减号*/  
.stepper text {  
    width: 40rpx;  
    text-align: center;   
}  
  
/*数值*/  
.stepper input {  
    width: 60rpx;  
    height: 100%;
    line-height: 40rpx;  
    margin: 0 auto;  
    text-align: center;  
    font-size: 12px;  
    /*给中间的input设置左右边框即可*/  
    border-left: 1px solid #ccc;  
    border-right: 1px solid #ccc;  
}  
  
/*普通样式*/  
.stepper .normal{  
    color: black;  
}  
  
/*禁用样式*/  
.stepper .disabled{  
    color: #ccc;  
}  
.footer{
  width: 100%;
  height: 50px;
  background-color: white;
  position: absolute;
  bottom: 0px;
  left: 0px;
  display: flex;
  justify-content:space-between;
  align-items:center ;
}
.footer .pay_btn {
  text-align: center;
  font-size:1.05rem;
  display: inline-block;
  margin-right: 10px;
  background-color: red;

}
.clickDown{
  background-color: gray;
}
.pay_lable_img{
  width: 25px;
  height: 25px;
  position: relative;
  top: 8rpx;
}
.radio_layout{
  margin: auto 0;
}