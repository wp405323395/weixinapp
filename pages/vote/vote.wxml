<!--pages/vote/vote.wxml-->
<view class="container">
   <view class='person_header'>
    <text class='lable_person'>被考核人:</text>
    <view class='imgs' >
      <view animation="{{animationData}}" class='{{index==focusIndex?"focus":"person_icon"}}' wx:for="{{persons}}" wx:key="unique">
        <text class="personName">{{item.name}}</text>
      </view>
    </view>
    
  </view> 
  <view class='img_page'></view>
  <view class='background_page'>
    <view class='vote_title_background'>
      <text class='vote_title'>{{questionList.projectName}}</text>
    </view>
     <view class='question_list' wx:key="{{questionItem.question}}" wx:for-item="questionItem" wx:for="{{questionList.questionList}}">
     <view class='question'>
        <text>{{questionItem.question}}</text>
     </view>
       <radio-group class='answer' bindchange="radioChange">
          <radio checked='{{clearChecked}}' class='checkbox_style' value="{{questionItem.questionId+'-'+item.answerId}}" wx:key="unique" wx:for="{{questionItem.answers}}">{{item.answertext}}</radio>
      </radio-group>
    </view>
    <view class='commons'>
      <input type='text' value="{{inputTxt}}" bindinput="commonInput" placeholder="发表对此人的评论" class='text_ar'></input>
    </view>
      <button bindtap='onNextClick' disabled='{{submitEnable}}' class='next_person'>下一位</button>
  </view>

</view>
