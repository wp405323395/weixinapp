<view class="container">
  <view class='button_pannel'>
    <view class='pannel'>
      <button bindtap='buy' class='btn'></button>
      <button bindtap='ping' data-name="{{1}}" class="btn1 {{prod1 ? 'pingdaning' : ''}}"></button>
    </view>
    <view class='pannel'>
      <button bindtap='buy' class='btn'></button>
      <button bindtap='ping' data-name="{{2}}" class="btn1 {{prod2 ? 'pingdaning' : ''}}"></button>
    </view>
    <view class='pannel'>
      <button bindtap='buy' class='btn'></button>
      <button bindtap='ping' data-name="{{3}}" class="btn1 {{prod3 ? 'pingdaning' : ''}}"></button>
    </view>
  </view>
</view>
<view class='red' hidden='{{isClose}}'>
  <view class='btn_group'>
    <button bindtap='ping(1)' class='goto_pingdan'>去拼单</button>
    <button open-type="share" bindtap='share' class='goto_share'>分享</button>
  </view>

  <image bindtap='close' src="../../../img/delete_img.png" class='delete'></image>
</view>
