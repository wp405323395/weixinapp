<import src="../../template/products.wxml" />
<view class="container">
  <view class="swiper">
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" style="height:{{bannerHeight}}px;">
      <block wx:for="{{imgUrls}}" wx:key="unique">
        <swiper-item>
          <image src="{{item}}" style="height:{{bannerHeight}}px;width: 100%;" />
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class="navbar" id="navbar">
    <view class="navbar_item" wx:for="{{navbar}}" data-idx="{{index}}" class="item {{currentTab==index ? 'active' : ''}}" wx:key="unique" bindtap="navbarTap">
      <view class="cell_style">
        <image src="{{currentTab==index ? item.img_li : item.img}}" class="navbar_img_style" />
        <text>{{item.text}}</text>
      </view>
    </view>
  </view>

  <view  hidden="{{!hasData || currentTab!==0}}">
    <template is="products" data="{{...page0 ,isShowDownTime: true}}" />
  </view>
  <view  hidden="{{!hasData || currentTab!==1}}">
    <template is="products" data="{{...page1 ,isShowDownTime: false}}" />
  </view>
  <view hidden="{{!hasData || currentTab!==2}}">
    <template is="products" data="{{...page2, isShowDownTime: false}}" />
  </view>
  <view hidden="{{!hasData || currentTab!==3}}">
    <template is="products" data="{{...page3, isShowDownTime: false}}" />
  </view>

</view>