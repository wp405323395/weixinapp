/* pages/index/index.wxss */

.search{
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.search_edit{
  display: flex;
  flex-direction: row;
  background: #eeeeee;
  width: 550rpx;
  border-radius: 50rpx ;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  margin-bottom: 20rpx;
  padding:0 40rpx;
  overflow:hidden;
  height: 80rpx;
  line-height: 80rpx;
}
 .search_edit::before{
  font-family: "iconfont";
  content: "\e620";
  font-size: 40rpx;
  color: black;
  font-weight: 500;
  display: inline-block;
  margin-right: 30rpx;
}
.voice::before{
  font-family: "iconfont";
  content: "\e687";
  font-size: 40rpx;
  color: black;
  font-weight: 500;
  z-index: 1;
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
}
.voice{
  display: inline-block;
  background-color: #eeeeee;
  height:80rpx;
  width: 80rpx;
  border-top-right-radius: 50%;
  border-bottom-right-radius: 50%;
}




.tab{float: left; width: 33.3333%;text-align: center;padding: 10rpx 0; }
.topTabSwiper:after{content: ""; clear: both;display: block;}
.tabBorer{border-bottom: 1px solid black; color: black; font-weight: 600}
.swiper{width: 100%;}
.swiper_con{background-color: white; text-align: center; width: 100%; height: 100%; }
.topTabSwiper{
  background: white;
  margin-bottom: 20rpx;
-moz-box-shadow:0px 5px 5px #eeeeee; -webkit-box-shadow:0px 5px 5px #eeeeee; box-shadow:0px 5px 5px #eeeeee;
}




.video_style{
  width: 700rpx;
  height: 400rpx;
}
