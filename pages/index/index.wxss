.swiper{
  margin: 6px;
}
.navbar_fix{
  display: flex;  
  background: white;
  margin-bottom: 13rpx; 
  background: green;
  border-bottom: 1rpx solid #D9D9D9;
  position: fixed;
  width: 100%;
  height: 70px;
  background: green;
  z-index: 10000;
}
.navbar{  
  width: 100%;
  display: flex;  
  background: white;
  margin-bottom: 13rpx; 
  background: green;
  height: 70px;
  border-bottom: 1rpx solid #D9D9D9;
}  
  .item{
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
  color: #f5b3ac;
  font-size: 0.8rem;
}  
 .item.active{  
  color: black;  
  font-size: 0.8rem;
}  
 .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 2rpx;  
  background: #ffffff;  
}  
