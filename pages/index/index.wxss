/**index.wxss**/
@import "../common/lib/weui.wxss";

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/* root.wxss */


.partingline {
  height: 2px;
  width: 100%;
  background-color: black;
}

.item-name {
  text-align: center;
  display: block;
  font-size: 12px;
}

.product_img {
  margin: 0 auto;
  display:block;
  position: relative;

}

button:last-child {
  margin-bottom: 0;
}

.swiper-item {
  display: block;
  height: 150px;
}

.page-section-title {
  margin-top: 60rpx;
  position: relative;
}

.info {
  position: absolute;
  right: 0;
  color: #353535;
  font-size: 30rpx;
}

.page-foot {
  margin-top: 50rpx;
}

.product_type_name {
  padding: 13rpx;
  width: 100%;
  color: #333333;
  font-size: 15px;
  font-weight:600;
  margin-top: 13rpx;
  background: #ffffff;
  display: block;
}

.banner_img{
  height: 100%;
  width: 100%;
}
.left_img{
  position: absolute;
  width: 5px;
  height: 15px;
  top: 1px;
  right: 20%;
}
.bottom_dital{
  position: relative;
}

.tickit_num{
  color: white;
  font-size: 35px;
  font-weight: 700;
}

.tickit_content{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.tickit_content_symbol{
  color: white;
  font-size: 16px;
  font-weight: 600;
  padding-top: 5px;
}


.product_box_containner {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  background: #ffffff;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
}

.scroll_view_item{
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
  flex-basis: 50%;

}
.navigator-hover{
  top: 1px; 
  width: 65%;
  margin-left: 15%;
}
.link_nav{
  position: relative;
}