.swiper{
  margin: 6px;
}
.navbar_fix{
  display: flex;  
  background: white;
  margin-bottom: 13rpx; 
  background: green;
  border-bottom: 1rpx solid #D9D9D9;
  position: fixed;
  width: 100%;
  height: 70px;
  background: green;
  z-index: 10000;
}
.navbar{  
  width: 100%;
  display: flex;  
  background: white;
  margin-bottom: 13rpx; 
  background: green;
  height: 70px;
  border-bottom: 1rpx solid #D9D9D9;
}  
  .item{
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
  color: #f5b3ac;
  font-size: 0.8rem;
}  
 .item.active{  
  color: black;  
  font-size: 0.8rem;
}  
 .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 2rpx;  
  background: #ffffff;  
}  
.list{
  display: flex;
  flex-direction:row;
  flex-wrap:wrap ;
  justify-content:flex-start ;
}
.list .product_item{
  width: 50%;
  height: 100px;
  display: inline-block;
  
  margin: 20px 0;
}

.list .product_item .product{
background: yellow;
margin: 0px auto;
width: 50px;
height: 50px;
}
.cons{
  width: 100%;
  height: 100%;
}