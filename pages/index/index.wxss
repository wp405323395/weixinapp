/**index.wxss**/
@import "../common/lib/weui.wxss";

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/* root.wxss */

.product_box_containner {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  background: #ffffff;
}

.partingline {
  height: 2px;
  width: 100%;
  background-color: black;
}

.item-name {
  text-align: center;
  display: block;
  font-size: 12px;
}

.product_img {
  margin: 0 auto;
  display:block;
  position: relative;

}

button:last-child {
  margin-bottom: 0;
}

.swiper-item {
  display: block;
  height: 150px;
}

.page-section-title {
  margin-top: 60rpx;
  position: relative;
}

.info {
  position: absolute;
  right: 0;
  color: #353535;
  font-size: 30rpx;
}

.page-foot {
  margin-top: 50rpx;
}

.product_type_name {
  padding: 13rpx;
  width: 100%;
  color: #333333;
  font-size: 15px;
  font-weight:600;
  margin-top: 13rpx;
  background: #ffffff;
  display: block;
}

.product_box {
  width: 100%;
  height: 100%;
  position: relative;
  padding: 20rpx;
}

.banner_img{
  height: 100%;
  width: 100%;
}
.left_img{
  position: absolute;
  width: 5px;
  height: 15px;
  top: 1px;
  right: 15%;
}
.bottom_dital{
  position: relative;
}

.tickit_content{
  color: white;
  font-size: 35px;
  font-weight: 700;
  position: absolute;
  text-align: center;
  width: 100%;  
  flex-direction: row;
  align-items:flex-start;
  top: -3px;

}

.tickit_content_symbol{
  color: white;
  font-size: 16px;
  font-weight: 600;
  display: inline-block;

}

.scroll_view_item{
  flex: 0 0 50%;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
}

.tickit_mengceng{
  margin: 0 auto;
  display:block;
  position: absolute;
  top:9%;
  left:14.5%;

}
.tickit_mengceng{
  visibility: hidden;
}
.tickit_mengceng:active{
  visibility: visible;
}
