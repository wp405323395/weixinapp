/* pages/search/search.wxss */
.input_arear{
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.input_arear>input{
   background-color: #eeeeee;
   display: inline-block;
   width: 420rpx;
   height: 80rpx;
   line-height: 80rpx;
   padding-left: 30rpx;
   padding-right: 30rpx;
}
.search_icon::before{
  display: inline-block;
  font-family: "iconfont";
  content: "\e620";
  font-size: 40rpx;
  color: black;
  font-weight: 500;
   line-height: 80rpx;
   height: 80rpx;
   margin-left: 30rpx;
   background-color:  #eeeeee;
   padding-left: 20rpx;
   border-top-left-radius: 40rpx;
   border-bottom-left-radius: 40rpx;
}

.voice_icon::before{
  display: inline-block;
  font-family: "iconfont";
  content: "\e687";
  font-size: 40rpx;
  color: black;
  font-weight: 500;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #eeeeee;
  padding-right: 20rpx;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  margin-right: 30rpx;
}
.search_history{
  background-color: white;
  padding-top: 40rpx;
}
.lable{
  color: #999999;
  display: inline-block;
}
.search_history_wrap{
  margin: 0 35rpx;
}
.history_item{
  height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.space_line{
  margin-left: 0;
  margin-right: 0;
}
.hot_history_wrap{
  display: flex;
  flex-direction: row;
    flex-wrap: wrap;
    padding: 30rpx;
}
.hot_item{
  display: block;
  border: 1px solid #d4d4d4;
  padding: 20rpx 30rpx;
  border-radius: 5rpx;
  flex-shrink:0;
  margin-right: 20rpx;
  margin-bottom:30rpx;
}
.delet_btn::before{
  font-family: "iconfont";
  content:'\e645';
  font-size: 40rpx;
}
.search_history_head{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #eeeeee;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #999999;
  background-color: white;
}
.delete_all{
  border: 1px solid #999999;
  color: #333333;
  line-height: 60rpx;
  height: 60rpx;
  padding:0 20rpx;
  border-radius: 8rpx;
  margin: 0;
  font-size: 32rpx;
}
.hot_search_lable{
  padding-left: 30rpx;
}
.hot_search_lable>image{
  width: 35rpx;
  height: 35rpx;
  margin-right: 20rpx;
}
.devide_line{
  width: 100%;
  height: 30rpx;
  background-color: #eeeeee;
  border-bottom: 1px solid #999999;
}
.search_history_wrap:last-child>.space_line{
  display: none;
}
.video_list{
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx;
  padding-bottom: 0;
  background-color: white;
}
.video_list>.video_item{
  display: flex;
  flex-direction: row;
  margin-bottom: 40rpx;
}

.video_detail{
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
  justify-content: space-between;
}
.video_detail>.title{
  color: #333333;
  font-size: 38rpx;
  word-break:break-all;
display: -webkit-box;    
-webkit-box-orient: vertical;    
-webkit-line-clamp: 2;    
overflow: hidden;
}
.video_detail>.watch_count{
  color: #999999;
}
.video_list>.video_item>image{
  width: 300rpx;
  height: 200rpx;
  flex-shrink:0;
}
.channel_list{
  display: flex;
  flex-direction: column;
  background-color: white;
}
.channel_list>.channel_item{
  color: #333333;
  font-size: 38rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  border-bottom: 1px solid #eeeeee;
}
.channel_list>.channel_item>button{
  height: 80rpx;
  line-height: 80rpx;
  margin: 0;
  width: 180rpx;
}
.line_devide{
  height: 20rpx;
  background-color: #eeeeee;
}
page{
  background-color: #eeeeee;
}
.video_more{
  text-align: center;
  border-top: 1px solid #eeeeee;
}
.video_more>text{
  height: 80rpx;
  line-height: 80rpx;
  color: #999999;
}
