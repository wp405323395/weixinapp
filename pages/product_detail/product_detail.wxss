/* product_detail.wxss */
@import "../common/lib/weui.wxss";
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
} 

.details{
  margin-top: 0;
  padding-top: 0;
  overflow: hidden;
  width:70%;
  text-overflow:ellipsis;
  display: -webkit-box;
   -webkit-line-clamp: 2;
   -webkit-box-orient: vertical;
   text-align: right;
   font-size: 25rpx;
   color: #666666
}
.spacal{
  margin-bottom: 13rpx;
}
.introduce_item{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
  align-items: center;
  background: #ffffff;
  padding: 13rpx;
  padding-left: 28rpx;
  padding-right: 28rpx;
  
}


.introduce{
  width: 100%;
}
.lable{
  font-size: 30rpx;
  color: #333333;
}
.bottom_btn{
  position: absolute;
  bottom: 40px;
  box-sizing: border-box;
  width: 100%;
}

.introduce>view:last-child{
  margin-top: 13rpx;
}
.bottom_text{
  width: 98%;
  padding-left:25rpx;
  padding-top: 5rpx;
  color: #999999;
  font-size: 23rpx;  
  text-align: left;
}
button{
  background: white;
  height: 60%;
  border-radius: 0;
  color: #ef2020;
}



