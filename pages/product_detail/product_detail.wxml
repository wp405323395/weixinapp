<!--product_detail.wxml-->
<view class="container">
  <view class="page-section page-section-spacing swiper">
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{background}}" wx:key="*this">
        <swiper-item>
          <view class="swiper-item {{item}}"></view>
        </swiper-item>
      </block>
    </swiper>
  </view>

<text class="details">
    {{product.storeInstructions}}
  </text>

  <view class="introduce">
    <view class="introduce_item">
      <text class="lable">优惠活动</text>
      <text class="details">{{product.productInstructions}}</text>
    </view>
    <view class="introduce_item">
      <text class="lable">截至日期</text>
      <text class="details">{{product.deadline}}</text>
    </view>
    <view class="introduce_item">
      <text class="lable">我们的公众号</text>
      <text class="details">公众号</text>
    </view>
  </view>
<view class="bottom_btn">
<button id="receive" type="primary" disabled="{{product.isUsed}}" bindtap="btn_click">{{product.btnText}}</button>

<button class="btn_delete_click" type="warn" hidden="{{!product.isReceive}}" bindtap="btn_delete_click">删除</button>

</view>


</view>