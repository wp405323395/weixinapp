.container{
  height: 100%;
  width: 100%;
}
.navbar{  
  width: 100%;
  display: flex;  
  background: green;
  height: 70px;
  border-bottom: 1rpx solid #D9D9D9;
  position: fixed;
  z-index: 10000;
  top: 0;
  left: 0;
}  
 .list{
  margin-top: 70px;
} 
  .item{
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
  color: #f5b3ac;
  font-size: 0.8rem;
}  
 .item.active{  
  color: black;  
  font-size: 0.8rem;
}  
 .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 2rpx;  
  background: #ffffff;  
}  
.list{
  display: flex;
  flex-direction:row;
  flex-wrap:wrap ;
  justify-content:space-around;
}
.list .product_item{
  background: yellow;
  width: 35%;
  height: 100px;
  display: inline-block;
  background: yellow;
  margin: 20px auto;
}