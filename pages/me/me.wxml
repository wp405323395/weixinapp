<view class='header'>
  <image class="userinfo-avatar" src='{{userInfo.avatarUrl}}' background-size="cover"></image>
  <text>绑定用户</text>
</view>
<view class='items'>
    <text bindtap='myDevices'>我的设备</text>
  <view class='space_line'></view>
    <text bindtap='watchHistory'>收看历史</text>
  <view class='space_line'></view>
    <text bindtap='myCollection'>我的收藏</text>
  <view class='space_line'></view>
    <text bindtap='question'>疑难解答</text>
  <view class='space_line'></view>
    <text bindtap='feedback'>意见反馈</text>


</view>

