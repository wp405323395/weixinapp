<!--pages/me/centerfeatures/watchHistory/watchHistory.wxml-->
<view class='header'>
  <text bindtap='toggleTap' class="basestyle {{isliving?'selectstyle':'unselectstyle'}}">视频</text>
  <text  bindtap='toggleTap' class="basestyle {{!isliving?'selectstyle':'unselectstyle'}}">直播</text>
</view>
<view class='space_margin'></view>
<view class='video' wx:if="{{isliving}}">
  <view  wx:key="idx" wx:for="{{videos}}" wx:for-index="idx" wx:for-item="itemName">
    <view class='video_header'>
      <text class='header_time'>{{itemName.timebefore}}前</text>
      <text class='delete'></text>
    </view>
    <view class='video_content'>
      <image class='video_icon' src='{{itemName.video.poster}}'></image>
      <view class='video_content_body'>
        <text class='title'>{{itemName.video.intro}}</text>
        <text class='time'>观看时长{{itemName.timeRecord}}</text>
        <button class='continue_button'>继续观看</button>
      </view>
    </view>
    <view class='line_space'></view>
  </view>
  
</view>
<view class='tv' wx:else>
   <view  wx:key="idx" wx:for="{{channels}}" wx:for-index="idx" wx:for-item="itemName">
    <view class='video_header'>
      <text class='header_time'>{{itemName.timebefore}}前</text>
      <text class='delete'></text>
    </view>
    <view  class='tv_content'>
      <view class='video_content_body tv_content_body'>
        <text class='title'>{{itemName.channel.name}}</text>
        <text class='time'>观看时长{{itemName.timeRecord}}</text>
      </view>
      <button class='continue_button'>继续观看</button>
    </view>
    <view class='line_space'></view>
   </view>
</view>
