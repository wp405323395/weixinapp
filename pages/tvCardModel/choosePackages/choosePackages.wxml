<!--choosePackages.wxml-->
<view class="container">
  <view class="packageList_wrap">
     <view hover-class="clicked_style" wx:for-index="idx" id="{{idx}}" bindtap="onChoocePackage" class="packageItem" wx:for="{{salesList}}" wx:key="unique">
      <text class="packageName">{{item.salesname}}</text>
      <view class="detail0">
        <text>订购周期: </text>
        <text class="num">{{item.count}}</text>
        <text class="nian">{{item.unit=='0'?'天':(item.unit=='1'?'月':'年')}}</text>
        <text>价格</text>
        <text class="num">{{item.price}}</text>
        <text>元</text>
      </view>
      <view class="px1"></view>
      <view class="intro_wrap">
        <text class="intro">
          套餐介绍: {{item.salesintro.length>30?'xx':item.salesintro}}
        </text>
      </view>
    </view> 
  </view>
</view>