<!--tvcard.wxml-->
<view class="container">
<view hidden="{{hidd0&&!cardInfo.tvCardNumber}}">
   <view class="item hav">
    <text>智能卡号</text> 
    <text>{{cardInfo.tvCardNumber}}</text>   
  </view>

  <view class="item">
    <text>姓名</text> 
    <text>{{cardInfo.custname}}</text>   
  </view> 
  <view class="item">
    <text>地址</text> 
    <text>{{cardInfo.addr}}</text>   
  </view> 

  <button bindtap="click" class="nex_btn" hover-class="nex_btn_tap">即时订购立马观看</button>

</view>
<view hidden="{{hidd1||cardInfo.tvCardNumber}}" class="scan_no_cardId">
   
      <image src="https://www.maywidehb.com/banner/no_map_cardId.png" class="no_data_img" mode="widthFix"></image>
      <view class="text_wrap">
        <text>您的微信号暂无有线电视账号记录</text>
      </view>
      <text  bindtap="onMsgConfirm" hover-class="err_hove" class="link_text">点击此处搜索!</text>

</view>
<view hidden="{{hidd2}}">
<view class='text_note'>
  <text class='note'>当前共有</text>
  <text class='note_blue'>{{custList.length}}</text>
  <text class='note'>条有线电视账号记录</text>
</view>

    <view class="customItem" bindtap="onSelected" data-id="{{item}}" wx:for="{{custList}}" wx:key="unique">
      <image class="icon" src="../../../img/person_icon.png"></image>
      <view class="cu_value">
        <view class="item0">
          <text>{{item.custname}}</text>
          <text class="dark">({{item.mobile}})</text>
        </view>
        <view class="item1">
          <text>地址：</text>
          <text>{{item.addr}}</text>
        </view>
      </view>
    </view>

    <button class="nex_btn" hover-class="nex_btn_tap" bindtap='onSearchMore'>搜索新账号</button>
</view>
<view class='bottom_logo'>
<image src="https://www.maywidehb.com/banner/guangdian_logo.png" class='logo_style'></image>
</view>

</view>

