<!--tvcard.wxml-->
<import src="../../../template/guangdian.wxml" />
<view class="container">
<template is="guangdian"/>
<view hidden="{{hidd0&&!cardInfo.tvCardNumber}}">
   <view class="item hav">
    <text>智能卡号</text> 
    <text>{{cardInfo.tvCardNumber}}</text>   
  </view>

  <view class="item">
    <text>姓名</text> 
    <text>{{cardInfo.custname}}</text>   
  </view> 
  <view class="item">
    <text>地址</text> 
    <text>{{cardInfo.addr}}</text>   
  </view> 

  <button bindtap="click" class="nex_btn" hover-class="nex_btn_tap">即时订购立马观看</button>

</view>
<view hidden="{{hidd1||cardInfo.tvCardNumber}}" class="scan_no_cardId">
    <image src="../../../img/no_map_cardId.png" class="no_data_img" mode="widthFix"></image>
    <view class="text_wrap">
      <text>您的微信号暂未绑定有线电视账号</text>
    </view>
          <text  bindtap="onMsgConfirm" hover-class="err_hove" class="link_text">点击此处绑定!</text>
</view>

  

</view>

