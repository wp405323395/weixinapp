/* tvcard.wxss */
.container{
  width: 100%;
  height: 100%;
}
.item{
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  border-bottom:  1px solid #d4d4d4;

}
text{
  padding: 10px;
}
.hav{
  margin:20rpx 0;
  margin-top: 0;
}
.nex_btn{
  margin:30px 10px;
  background-color:#3fa5ed;
  color: white;
  margin-bottom: 15rpx;
  font-size:1rem;
}
.nex_btn_tap{
  opacity: 0.5;
  padding-top: 5rpx;
}
.err_hove{
  padding-top: 3rpx;
}
.msg_err_wrap{
  color: #ed3f3f;
}
.msg_error{
  text-align: center;
  display: inline-block;
  width: 100%;
  padding: 0;
  text-decoration: underline;
}
.scan_no_cardId{
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;

}
.no_data_img{
  width: 280rpx;
  margin-top: 100rpx;
  margin-bottom: 60rpx;
}
.text_wrap{
  color: #999999;
}
.link_text{
color: #3fa5ed;
text-decoration:underline;
}

.bottom_logo{
  width: 100%;
  position: fixed;
  z-index: 99;
  bottom:120rpx;
  text-align: center;
}
.text_note{
  background-color: #eeeeee;
  padding: 20rpx 5rpx;
}
.note{
  color: #999999;
}
.note_blue{
  color: #3fa5ed;
  padding-left: 2rpx;
  padding-right: 2rpx;
}
