<!-- head.wxml -->
<!--
  scrollHeight: int
  bindDownLoad:function
  list:Array
  foot_loading:boolean

-->
<template name="used_list">
   <scroll-view data-id="{{page_id}}" scroll-y class="list"  style="height:{{scrollHeight}}px;" bindscrolltolower="bindDownLoad">
      <block class="item" wx:for="{{list}}" wx:key="{{item.id}}">
        <view class="product_item">
          <image class="img" src="{{item.img}}"></image>
          <view class="text">
            <text class="title">{{item.name}}</text>
            <text class="description">{{item.typeName}}</text>
            <text class="description">{{item.deadline}}</text>
          </view>
        </view>
      </block>
      <view class="foot_loading" hidden="{{foot_loading}}">
      <text>正在加载中... ...</text>
    </view>
    </scroll-view>
</template>

