/* persons.wxss */
.person_list{
padding:25rpx 35rpx;
background-color:white;
align-items:center;
margin-bottom:1px;
display: flex;
align-content: center;
flex-direction: row;
justify-content: space-between;
}
.person_list:first-child{
  margin-top: 1px;
  margin-bottom: 35rpx;
}
.person_list_inner{
align-items:center;
display: flex;
flex-direction: row;
}
.delete{
width:60rpx;
height:60rpx;
align-self:flex-end;
font-size: 1rem;
text-align: center;
color: #eeeeee;
font-family:"iconfont" !important;
font-style:normal;
-webkit-font-smoothing: antialiased;
-webkit-text-stroke-width: 0.2px;
-moz-osx-font-smoothing: grayscale;
color:#999999;
}
.delete::after{
  content: '\e646'
}
.avarImgUrl{
width:60rpx;
height:60rpx;
border-radius: 5rpx;
}
.nickName{
  display: inline-block;
  margin-left: 35rpx;
  text-align: center;
}
.owner{
  color: #3fa5ed;
}
.bug{
  display: inline-block;
}

.add_person{
margin:100rpx 40rpx;
background:#3fa5ed;
border-radius: 10rpx;
color: white;
text-align: center;
}
.add_person>view:first-child{
display:inline-block;
margin-top:15rpx;
margin-bottom:15rpx;
font-size:1rem;


}
.add_person>view:first-child::before{
content:'+';
font-size:1.2rem;
margin-right:30rpx;

}
.bottomAct{
  background-color:#a1d8ff;
}
.qr_wrap {
  width: 100%;
  height: 750rpx;
  z-index: 101;
  position: fixed;
  top: 120rpx;
  text-align: center;
}
.qr_wrap_inner {
  width: 90%;
  height: 100%;
  margin: auto;
  background-color: white;
  text-align: center;
  padding-top:30rpx;
  border-radius: 20rpx;
}
.qr_img{
  width:90%;
  height: 80%;
  margin: auto;
  margin-top: 0;
  display: block;
  margin-bottom:40rpx;

}

.boomBox {
  position: fixed;
  z-index: 100;
  width: 100%;
  height: 100%;
  background: black;
  top: 0;
  left: 0;
  opacity: 0.5;
}
.close_dialog{
  font-size: 1rem;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  border: white 2px solid;
  color: white;
  text-align: center;
  display:inline-block;
  margin-top:40rpx;

}
.close_dialog::after{
  content: '\2715';
}