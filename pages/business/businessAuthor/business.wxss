/* business.wxss */
@import "../../../utils/weui.wxss";
.store_name{
  width: 100%;
  margin:30rpx 0;
}
.first{
  margin-top: 20rpx;
}

.name_lable{
background-color:white;
margin-bottom:1px;
padding-left:25rpx;
line-height:60rpx;
height:60rpx;
display:block;

}
.img_red_point{
  color: red;
  display: inline-block;
  margin-right: 10rpx;
}
.input_style{
  background-color: white;
  padding: 30rpx;
  padding-left: 50rpx;
}
.margin_five{
  padding-left: 50rpx;
}
.category{
  padding: 40rpx 0;
  background-color: white;
  margin-bottom: 30rpx;
}

.holder_style{
  color: #999999;
}
.text_style{
  color: #666666;
}
.line .text{
  width: 25%;
  display: inline-block;
  text-align:center;
  box-sizing: border-box;
}
.line .text .item_text{
  border: 1rpx #666666 solid;
  padding: 10rpx 15rpx;
  font-size: 0.9rem;
  box-sizing: border-box;
  border-radius:6rpx;
  color: #666666;

}
.line {
  margin-bottom: 30rpx;
}
.nomargin{
  margin-top: 0;
}
.nomargin_bottom{
  margin-bottom: 0rpx;
}

.bottom_bt{
  background-color: #3fa5ed;                   
  height: 100rpx;
  text-align: center;
}
.bottom_bt text {
  height: 100rpx;
  line-height: 100rpx;
  color: white;
  font-size: 1.2rem;
}
.bottomAct{
  background-color:#a1d8ff;
}
.image_upload{
  background-color: white;
}
.no_margin_top{
  margin-top:0;
  border-top: none;
}
.weui-cells::after{
  border-bottom:0rpx solid #D9D9D9;

}
.delete_img{
  position: absolute;
  top: -40rpx;
  right: -40rpx;
  width: 100rpx;
  height: 100rpx;
}
.weui-uploader__bd{
  overflow:visible;
}

.imge_relative{
  position: relative;
}
.chooce_location{
  background: white;
}
.chooce_img{
height:48rpx;
width:160rpx;
align-content:flex-end;
margin-right: 25rpx;
}
.chooce_location_text{
  width: 70%;
}
.chooce_location_wrap{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
   align-items:center;
}
.weui-uploader__title{
  font-size: 0.8rem;
  color: red;
}
.kind_active{
  padding:12rpx 5rpx;
  font-size:0.9rem;
  border-radius:6rpx;
  background: #3fa5ed;
  color: white;
}