<!--detail.wxml-->
<import src="../../template/detail.wxml" />
<view class="container">
    <view class="allwrap">
     
        <template is="detail" data="{{product}}" />
        <button class='introduce_item introduce_item2' open-type="share" hover-class="navigator-hover">
           <text>赠送优惠券</text>
           <view class="go_in"></view>
        </button>
        
        <view  class="delete_coup_wrap" bindtap="deleteCoup" hover-class="navigator-hover"  hidden="{{product.relaId ==''||product.relaId == 'undefine'|| product.relaId == null }}">
          <text class="delete_coup" >删除优惠券</text>
        </view>
      <view class="depends"></view>
      <button bindtap="click" class="use_coup_button" hover-class="navigator-hover" disabled="{{product.receiveFlag != '1'&&product.relaReceiveFlag != '0'}}" hover-stay-time="200">{{product.receiveMemo}}</button>

    </view>


  <view bindtap="onclick_hide_dialog" class="boomBox" hidden="{{isHidden}}">
  </view>
  <view class="qr_wrap" hidden="{{isHidden}}">
    <view class="qr_wrap_inner">
        <image src="{{qrImgUrl}}" class="qr_img"></image>
        <text>请将此二维码展示给商家,完成扫码</text>
    </view>
    <text bindtap="onClose" class="close_dialog"></text>
  </view>

  <view class="dialog_border dialog dialog1" hidden="{{isHidden1}}">
    <image src="../../img/dialog_left.png" class="dialog_img" />
    <view class="dialog_content">
      <view class="dialog_title_wrap">
        <view class="dialog_title_line">
          <view class="dialog_title_shor_line" />
          <text class="dialog_t1">领取成功</text>
          <view class="dialog_title_shor_line" />
        </view>

        <text class="dialog_t2">领取成功的优惠券可在我的页面中查看</text>
      </view>
      <view class="bottom_btn">
        <button bindtap="onclick_use_it" class="dialog_bt dialog_bt1" hover-class="dialog_bt1_hove">立即使用</button>
        <button bindtap="onclick_continue_get" class="dialog_bt dialog_bt2">继续领取</button>
      </view>

    </view>
    <image src="../../img/dialog_right.png" class="dialog_img" />
  </view>

  <view class="dialog_border dialog dialog2" hidden="{{isHidden2}}">
    <image src="../../img/dialog_left.png" class="dialog_img" />
    <view class="dialog_content">
      <view class="dialog_title_wrap">
        <view class="dialog_title_line">
          <view class="dialog_title_shor_line" />
          <text class="dialog_t1">领取成功</text>
          <view class="dialog_title_shor_line" />
        </view>

        <text class="dialog_t2">领取成功的优惠券可在我的页面中查看</text>
      </view>
      <view class="dialog2_content">
        <view class="tickit_content" id="t1">
          <view class="tickit_wrap tickit1" hover-class="tickit_tap">
            <image src="../../img/tickit.png" class="tickit "></image>
            <view class="tickit_txt_content">
              <view class="tickit_title">
                <text class="tickit_title1_style">武汉广电优惠券套餐</text>
                <text class="tickit_lable">限时特惠</text>
              </view>

              <text class="ticki_title tickit_title2_style">满100减20元</text>
              <text class="ticki_title tickit_title3_style">(任意套餐通用)</text>
            </view>
            <view class="free_take_tickit">
              <text class="free_take_tickit_text">免费\n领取</text>
            </view>

          </view>


        </view>
        <view class="tickit_content" id="t2">
          <view class="tickit_wrap tickit2" hover-class="tickit_tap">
            <image src="../../img/tickit.png" class="tickit"></image>
            <view class="tickit_txt_content">
              <view class="tickit_title">
                <text class="tickit_title1_style">武汉广电优惠券套餐</text>
                <text class="tickit_lable">限时特惠</text>
              </view>

              <text class="ticki_title tickit_title2_style">订购享8.8折优惠</text>
              <text class="ticki_title tickit_title3_style">(任意套餐通用)</text>
            </view>
            <view class="free_take_tickit">
              <text class="free_take_tickit_text">免费\n领取</text>
            </view>
          </view>

        </view>
      </view>
      <view class="bottom_btn">
        <button bindtap="onclick_use_it" class="dialog_bt dialog_bt1" hover-class="dialog_bt1_hove">立即使用</button>
        <button bindtap="onclick_continue_get" class="dialog_bt dialog_bt2">继续领取</button>
      </view>

    </view>
    <image src="../../img/dialog_right.png" class="dialog_img" />
  </view>


</view>